{
  "manifestVersion": "1",
  "name": "carbon",
  "version": "1.0.0",
  "description": "Carbon hook sends a percentage of outgoing payments to a dedicated account (hardcoded beneficiary)",
  "publisher": "rThomasoLNAej9QcZV6hDrH7FxfJH7Cft",
  "repo": "https://github.com/Silkjaer/c-example-carbon",
  "license": "MIT",
  "networks": [
    "xahau-testnet"
  ],
  "roles": {
    "installer": {
      "label": "Hook installer",
      "description": "The account installing the hook"
    }
  },
  "hooks": [
    {
      "id": "main",
      "artifact": {
        "toolchain": "hooks-c",
        "source_path": "carbon.c"
      },
      "HookNamespace": "00000000000000000000000000000000",
      "HookOn": [
        "PAYMENT"
      ],
      "HookCanEmit": [
        "PAYMENT"
      ],
      "HookParameters": []
    }
  ],
  "install": [
    {
      "TransactionType": "SetHook",
      "description": "Install the hook",
      "role": "installer",
      "hookIds": [
        "main"
      ]
    }
  ]
}
